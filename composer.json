{
    "name": "laravel-myanmar-tools/font",
    "description": "PHP Myanmar Font",
    "keywords": [
        "laravel-myanmar-tools",
        "font"
    ],
    "homepage": "https://github.com/laravel-myanmar-tools/font",
    "license": "MIT",
    "authors": [
        {
            "name": "Pyae Sone Aung",
            "email": "pyaesoneaungrgn@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/macroable": "^2.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "LaravelMyanmarTools\\Font\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelMyanmarTools\\Font\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
